<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_view_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info_window_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="[XXXXXX, YYYY]" />

    <TextView
        android:id="@+id/info_window_address_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp"
        tools:text="UK - England" />

    <TextView
        android:id="@+id/info_window_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp"
        tools:text="Buckingham Palace..." />
</LinearLayout>